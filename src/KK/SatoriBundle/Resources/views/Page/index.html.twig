{# src/KK/SatoriBundle/Resources/views/Page/index.html.twig #}
{% extends'KKSatoriBundle::layout.html.twig' %}


{% block body %}
    {% for blog in blogs %}

        <div id="container">
            <div id="content">

                <div id="" class="post">
                    <h2 class="entry-title"><a href="{{ path('KKSatoriBundle_show', { 'slug': blog.slug }) }}" title="{{ blog.title }}" rel="bookmark">{{ blog.title }}</a></h2>
                        <div class="entry-content">
                            {% autoescape false %}
                                {{ include(template_from_string(blog.blog|truncate(2000))) }} {# uses Twig function template_from_string to display images from fixtures #}
                            {% endautoescape %}

                            <p class="tag-links">
                            <span>Tags:</span>
                            {% for tag in blog.tags %} {# loop through all tag properties of blog #}
                             <a href="{{ path('KKSatoriBundle_tag', { "tag": tag.tag }) }}" rel="tag">{{ tag.tag }}</a>
                            {% endfor %}
                            </p>
                        </div>
                        <dl class="entry-meta">
                            <dt>Published:</dt>
                            <dd class="entry_date">{{ blog.created|date('F j, Y - h:iA') }}</dd>
                            <dt>Author:</dt>
                            <dd class="">By <a class="" href="" title="">{{ blog.author }}</a></dd>
                            <dt>Categories:</dt>
                            <dd class="cat-links">
                                <ul class="post-categories">
                                    <li><a href="{{ path('KKSatoriBundle_category', { 'category': blog.category.title }) }}" title="" rel="category tag">{{ blog.category.title }}</a></li>
                                </ul>
                            </dd>
                        </dl>
                </div><!-- .post -->

            </div><!-- #content -->
        </div><!-- #container -->

    {% endfor %}
{% endblock %}


